{
	"id": "com.xiaomi-miio",
    "sdk": 2,
	"name": {
		"en": "Xiaomi Mi Home",
		"nl": "Xiaomi Mi Home"
    },
    "tags": {
		"en": [ "Xiaomi", "Mi", "Mi Home", "yeelight", "yeelights", "purifier", "humidifier" ],
		"nl": [ "Xiaomi", "Mi", "Mi home", "yeelight", "yeelights", "luchtreiniger", "luchtbevochtiger" ]
	},
	"version": "2.3.0",
	"compatibility": "1.x >=1.5.0",
	"author": {
		"name": "Jelger Haanstra",
		"email": "homey@solidewebservices.com"
	},
    "contributing": {
        "donate": {
            "paypal": {
                "email": "paypal@solidewebservices.com",
                "currency": "EUR"
            }
        }
    },
    "images": {
        "large": "./assets/images/large.jpg",
        "small": "./assets/images/small.jpg"
    },
	"category": "appliances",
	"description": {
		"en": "Control Xiaomi Mi Home devices",
		"nl": "Bestuur Xiaomi Mi Home apparaten"
	},
	"dependencies": {
		"net": "*"
	},
	"drivers": [
        {
			"id": "yeelights",
			"name": {
				"en": "Yeelights",
				"nl": "Yeelights"
			},
			"images": {
				"large": "drivers/yeelights/assets/images/large.jpg",
				"small": "drivers/yeelights/assets/images/small.jpg"
			},
			"class": "light",
            "capabilities": [
                "onoff",
                "dim",
                "light_temperature",
                "light_hue",
                "light_saturation",
                "light_mode"
            ],
            "pair": [
                {
                    "id": "list_devices",
                    "template": "list_devices",
                    "navigation": {
                        "next": "add_yeelights"
                    }
                },
                {
                    "id": "add_yeelights",
                    "template": "add_devices"
                }
            ]
		},
        {
			"id": "mi-airpurifier",
			"name": {
				"en": "Mi Air Purifier",
				"nl": "Mi Luchtreiniger"
			},
			"images": {
				"large": "drivers/mi-airpurifier/assets/images/large.jpg",
				"small": "drivers/mi-airpurifier/assets/images/small.jpg"
			},
			"class": "sensor",
			"capabilities": [
                "onoff",
                "measure_temperature",
                "measure_humidity",
                "measure_pm25"
            ],
            "mobile": {
                "components": [
                    {
                        "id": "icon",
                        "capabilities": [ "onoff" ]
                    },
                    {
                        "id": "sensor",
                        "capabilities": [
                            "measure_temperature",
                            "measure_humidity"
                        ]
                    },
                    {
                        "id": "sensor",
                        "capabilities": [ "measure_pm25" ]
                    }
                ]
            },
			"pair": [
				{
					"id": "start"
				}
			],
			"settings": [
			    {
                    "type": "group",
                    "label": {
                        "en": "Mi Air Purifier Settings",
						"nl": "Mi Luchtreiniger Instellingen"
                    },
					"children": [
				        {
				            "id": "address",
				            "type": "text",
				            "value": "0.0.0.0",
				            "label": {
				                "en": "IP Address",
				                "nl": "IP Adres"
				            }
				        },
				        {
					        "id": "token",
					        "type": "text",
					        "value": "",
					        "label": {
						        "en": "Mi Air Purifier Token",
						        "nl": "Mi Luchtreiniger Token"
					        }
				        },
                        {
					        "id": "polling",
					        "type": "number",
					        "value": 60,
					        "label": {
						        "en": "Mi Air Purifier Polling",
						        "nl": "Mi Luchtreiniger Polling"
					        }
				        }
		            ]
		        }
		    ]
		},
        {
			"id": "mi-humidifier",
			"name": {
				"en": "Mi Humidifier",
				"nl": "Mi Luchtbevochtiger"
			},
			"images": {
				"large": "drivers/mi-humidifier/assets/images/large.jpg",
				"small": "drivers/mi-humidifier/assets/images/small.jpg"
			},
			"class": "sensor",
            "capabilities": [
                "onoff",
                "measure_temperature",
                "measure_humidity"
            ],
            "mobile": {
                "components": [
                    {
                        "id": "icon",
                        "capabilities": [ "onoff" ]
                    },
                    {
                        "id": "sensor",
                        "capabilities": [ "measure_temperature" ]
                    },
                    {
                        "id": "sensor",
                        "capabilities": [ "measure_humidity" ]
                    }
                ]
            },
			"pair": [
				{
					"id": "start"
				}
			],
			"settings": [
			    {
                    "type": "group",
                    "label": {
                        "en": "Mi Humidifier Settings",
						"nl": "Mi Luchtbevochtiger Instellingen"
                    },
					"children": [
				        {
				            "id": "address",
				            "type": "text",
				            "value": "0.0.0.0",
				            "label": {
				                "en": "IP Address",
				                "nl": "IP Adres"
				            }
				        },
				        {
					        "id": "token",
					        "type": "text",
					        "value": "",
					        "label": {
						        "en": "Mi Humidifier Token",
						        "nl": "Mi Luchtbevochtiger Token"
					        }
				        },
                        {
					        "id": "polling",
					        "type": "number",
					        "value": 60,
					        "label": {
						        "en": "Mi Humidifier Polling",
						        "nl": "Mi Luchtbevochtiger Polling"
					        }
				        }
		            ]
		        }
		    ]
		}
	],
	"flow": {
        "conditions": [
			{
				"id": "poweredAirpurifier",
				"title": {
                    "en": "!{{is|is not}} powered on",
                    "nl": "!{{is|is niet}} aangezet"
				},
				"args": [
					{
						"name": "device",
						"type": "device",
						"placeholder": {
							"en": "Select Mi Air Purifier",
							"nl": "Selecteer Mi Luchtreiniger"
						},
						"filter": "driver_id=mi-airpurifier"
					}
				]
			},
            {
				"id": "poweredHumidifier",
				"title": {
                    "en": "!{{is|is not}} powered on",
                    "nl": "!{{is|is niet}} aangezet"
				},
				"args": [
					{
						"name": "device",
						"type": "device",
						"placeholder": {
							"en": "Select Mi Humidifier",
							"nl": "Selecteer Mi Luchtbevochtiger"
						},
						"filter": "driver_id=mi-humidifier"
					}
				]
			}
        ],
		"actions": [
            {
				"id": "yeelightDefault",
				"title": {
					"en": "Set default on state",
					"nl": "Stel standaard opstart status in"
				},
                "hint": {
					"en": "Use this card to save the current state as the default on state of your Yeelight",
					"nl": "Gebruik deze actie om de huidige status op te slaan als de standaard aan status van je Yeelight"
				},
				"args": [
                    {
						"name": "device",
						"type": "device",
                        "placeholder": {
							"en": "Select Yeelight",
							"nl": "Selecteer Yeelight"
						},
						"filter": "driver_id=yeelights"
                    }
				]
			},
            {
				"id": "yeelightFlowBrightness",
				"title": {
					"en": "Change brightness over time",
					"nl": "Wijzig helderheid over tijd"
				},
                "hint": {
					"en": "Use this card to create a changing effect of temperature and brightness over time (duration in milliseconds, temperature in Kelvin 2700-6500 and brightness in percentage)",
					"nl": "Gebruik deze actie voor een veranderd effect van licht temperatuur en helderheid over tijd (doorlooptijd in milliseconden, temperatuur in Kelvin 2700-6500 en helderheid in percentage)"
				},
				"args": [
                    {
						"name": "action",
						"type": "dropdown",
                        "placeholder": {
                            "en": "Finish action",
                            "nl": "Afrondactie"
                        },
                        "values": [
                            {
                                "id": "0",
                                "label": {
                                    "en": "Recover to previous state",
                                    "nl": "Terug naar oorspronkelijke staat"
                                }
                            },
                            {
                                "id": "1",
                                "label": {
                                    "en": "Stay at the state",
                                    "nl": "Behoud staat"
                                }
                            },
                            {
                                "id": "2",
                                "label": {
                                    "en": "Turn off light",
                                    "nl": "Licht uit"
                                }
                            }
                        ]
                    },
                    {
						"name": "duration",
						"type": "number",
                        "placeholder": {
                            "en": "Duration in milliseconds",
                            "nl": "Doorlooptijd in milliseconden"
                        },
                        "min": 50,
                        "step": 1
                    },
                    {
						"name": "temperature",
						"type": "number",
                        "placeholder": {
                            "en": "Temperature",
                            "nl": "Temperatuur"
                        },
                        "min": 2700,
                        "max": 6500,
                        "step": 1
                    },
                    {
						"name": "brightness",
						"type": "number",
                        "placeholder": {
                            "en": "Brightness",
                            "nl": "Helderheid"
                        },
                        "min": 0,
                        "max": 100,
                        "step": 1
                    },
                    {
						"name": "device",
						"type": "device",
                        "placeholder": {
							"en": "Select Yeelight",
							"nl": "Selecteer Yeelight"
						},
						"filter": "driver_id=yeelights"
                    }
				]
			},
            {
				"id": "yeelightTemperatureScene",
				"title": {
					"en": "Temperature and brightness",
					"nl": "Temperatuur en helderheid"
				},
                "hint": {
					"en": "Use this card to set the temperature and brightness directly (temperature in Kelvin 2700-6500 and brightness in percentage)",
					"nl": "Gebruik deze actie om de temperatuur en helderheid direct in te stellen (temperatuur in Kelvin 2700-6500 en helderheid in percentage)"
				},
				"args": [
                    {
						"name": "temperature",
						"type": "number",
                        "placeholder": {
                            "en": "Temperature",
                            "nl": "Temperatuur"
                        },
                        "min": 2700,
                        "max": 6500,
                        "step": 1
                    },
                    {
						"name": "brightness",
						"type": "number",
                        "placeholder": {
                            "en": "Brightness",
                            "nl": "Helderheid"
                        },
                        "min": 0,
                        "max": 100,
                        "step": 1
                    },
                    {
						"name": "device",
						"type": "device",
                        "placeholder": {
							"en": "Select Yeelight",
							"nl": "Selecteer Yeelight"
						},
						"filter": "driver_id=yeelights"
                    }
				]
			},
            {
				"id": "yeelightColorScene",
				"title": {
					"en": "Color and brightness",
					"nl": "Kleur en helderheid"
				},
                "hint": {
					"en": "Use this card to set the color and brightness directly (brightness in percentage)",
					"nl": "Gebruik deze actie om de kleur en helderheid direct in te stellen (helderheid in percentage)"
				},
				"args": [
                    {
						"name": "color",
						"type": "color"
                    },
                    {
						"name": "brightness",
						"type": "number",
                        "placeholder": {
                            "en": "Brightness",
                            "nl": "Helderheid"
                        },
                        "min": 0,
                        "max": 100,
                        "step": 1
                    },
                    {
						"name": "device",
						"type": "device",
                        "placeholder": {
							"en": "Select Yeelight",
							"nl": "Selecteer Yeelight"
						},
						"filter": "driver_id=yeelights"
                    }
				]
			},
            {
				"id": "yeelightCustomCommand",
				"title": {
					"en": "Send command (advanced)",
					"nl": "Verstuur commando (geadvanceerd)"
				},
                "hint": {
					"en": "Advanced users can use this card to send any custom command, see the Yeelight documentation for options",
					"nl": "Geadvanceerde gebruikers kunnen deze actie gebruiken om maatwerk commands te versturen, zie de Yeelight documentatie voor opties"
				},
				"args": [
                    {
						"name": "command",
						"type": "text",
                        "placeholder": {
                            "en": "Custom command",
                            "nl": "Aangepast commando"
                        }
                    },
                    {
						"name": "device",
						"type": "device",
                        "placeholder": {
							"en": "Select Yeelight",
							"nl": "Selecteer Yeelight"
						},
						"filter": "driver_id=yeelights"
                    }
				]
			},
            {
				"id": "airpurifierOn",
				"title": {
					"en": "Turn on",
					"nl": "Zet aan"
				},
				"args": [
					{
						"name": "device",
						"type": "device",
                        "placeholder": {
							"en": "Select Mi Air Purifier",
							"nl": "Selecteer Mi Luchtreiniger"
						},
						"filter": "driver_id=mi-airpurifier"
					}
				]
			},
            {
				"id": "airpurifierOff",
				"title": {
					"en": "Turn off",
					"nl": "Zet uit"
				},
				"args": [
					{
						"name": "device",
						"type": "device",
                        "placeholder": {
							"en": "Select Mi Air Purifier",
							"nl": "Selecteer Mi Luchtreiniger"
						},
						"filter": "driver_id=mi-airpurifier"
					}
				]
			},
            {
				"id": "modeAirpurifier",
				"title": {
					"en": "Set Speed",
					"nl": "Stel snelheid in"
				},
				"args": [
                    {
						"name": "mode",
						"type": "dropdown",
                        "values": [
                            {
                                "id": "idle",
                                "label": {
                                    "en": "Idle",
                                    "nl": "Standby"
                                }
                            },
                            {
                                "id": "auto",
                                "label": {
                                    "en": "Auto",
                                    "nl": "Auto"
                                }
                            },
                            {
                                "id": "silent",
                                "label": {
                                    "en": "Silent",
                                    "nl": "Stil"
                                }
                            },
                            {
                                "id": "low",
                                "label": {
                                    "en": "Low",
                                    "nl": "Laag"
                                }
                            },
                            {
                                "id": "medium",
                                "label": {
                                    "en": "Medium",
                                    "nl": "Middel"
                                }
                            },
                            {
                                "id": "high",
                                "label": {
                                    "en": "High",
                                    "nl": "Hoog"
                                }
                            }
                        ]
                    },
                    {
						"name": "device",
						"type": "device",
                        "placeholder": {
							"en": "Select Mi Air Purifier",
							"nl": "Selecteer Mi Luchtreiniger"
						},
						"filter": "driver_id=mi-airpurifier"
                    }
				]
			},
            {
				"id": "humidifierOn",
				"title": {
					"en": "Turn on",
					"nl": "Zet aan"
				},
				"args": [
					{
						"name": "device",
						"type": "device",
                        "placeholder": {
							"en": "Select Mi Humidifier",
							"nl": "Selecteer Mi Luchtbevochtiger"
						},
						"filter": "driver_id=mi-humidifier"
					}
				]
			},
            {
				"id": "humidifierOff",
				"title": {
					"en": "Turn off",
					"nl": "Zet uit"
				},
				"args": [
					{
						"name": "device",
						"type": "device",
                        "placeholder": {
							"en": "Select Mi Humidifier",
							"nl": "Selecteer Mi Luchtbevochtiger"
						},
						"filter": "driver_id=mi-humidifier"
					}
				]
			},
            {
				"id": "modeHumidifier",
				"title": {
					"en": "Set Speed",
					"nl": "Stel snelheid in"
				},
				"args": [
                    {
						"name": "mode",
						"type": "dropdown",
                        "values": [
                            {
                                "id": "silent",
                                "label": {
                                    "en": "Silent",
                                    "nl": "Stil"
                                }
                            },
                            {
                                "id": "medium",
                                "label": {
                                    "en": "Medium",
                                    "nl": "Middel"
                                }
                            },
                            {
                                "id": "high",
                                "label": {
                                    "en": "High",
                                    "nl": "Hoog"
                                }
                            }
                        ]
                    },
                    {
						"name": "device",
						"type": "device",
                        "placeholder": {
							"en": "Select Mi Humidifier",
							"nl": "Selecteer Mi Luchtbevochtiger"
						},
						"filter": "driver_id=mi-humidifier"
                    }
				]
			}
		]
	}
}
